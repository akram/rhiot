#!/usr/bin/env bash

### General configuration

RHIOT_VERSION=${RHIOT_VERSION:-0.1.3}
RHIOT_HOME=${RHIOT_HOME:-~/.rhiot}
RHIOT_DOCKER_MACHINE_ENV=${RHIOT_DOCKER_MACHINE_ENV:-default}
RHIOT_RCP_LOG=$RHIOT_HOME/rcp.log
REQUIRED_DOCKER_VERSION=1.8.2


if [ ! -d ${RHIOT_HOME} ]; then
	mkdir -p ${RHIOT_HOME}
	echo "INFO : use RHIOT_HOME=${RHIOT_HOME}"
	echo "INFO : create RHIOT_HOME=${RHIOT_HOME}"
fi

echo "INFO : Starting Rhiot Cloud Platform" | tee $RHIOT_RCP_LOG

### Docker boot init

case "$OSTYPE" in 

	linux-gnu)
      if ! type "docker" > $RHIOT_RCP_LOG 2>&1 ; then
        echo "INFO : Docker not found - installing..."
        wget -qO- https://get.docker.com/ | sh
      else
        DOCKER_VERSION=`docker version --format '{{.Server.Version}}'`
        if [ "$DOCKER_VERSION" \< "$REQUIRED_DOCKER_VERSION" ]; then
          echo "INFO : Docker ${REQUIRED_DOCKER_VERSION} is required to run Rhiot. Version ${DOCKER_VERSION} found - upgrading..."
          wget -qO- https://get.docker.com/ | sh
        fi
      fi
  ;;
  
	darwin*)
      if ! type "docker-machine" > $RHIOT_RCP_LOG 2>&1; then
        echo "ERROR : Please install docker for MacOS X"
        exit 1
      fi
					
      docker-machine env $RHIOT_DOCKER_MACHINE_ENV | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
      if [ $? -ne 0 ]; then
        echo "INFO :  docker-machine start $RHIOT_DOCKER_MACHINE_ENV"
        docker-machine start $RHIOT_DOCKER_MACHINE_ENV > $RHIOT_RCP_LOG 2>&1
      fi
      eval $(docker-machine env $RHIOT_DOCKER_MACHINE_ENV)
  ;;
esac

if [ $(docker ps | wc -l) -gt 1 ]; then
	docker stop $(docker ps -q) | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
fi

docker rm mongodb AMQP_SERVICE_HOST datastream-node spark_master spark_worker | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1

### MongoDB
echo "INFO : MongoDB" | tee $RHIOT_RCP_LOG
if [ $(docker ps -a | grep mongodb_data | wc -l) -eq 0 ]; then
    echo "MongoDB data volume doesn't exist. Creating..."
    docker run -v /data/db --name mongodb_data busybox true | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
fi
docker run -d --volumes-from mongodb_data --name mongodb -p 27017:27017 mongo | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
echo "INFO : MongoDB started" | tee $RHIOT_RCP_LOG

### IoT Connector

echo "INFO : ActiveMQ" | tee $RHIOT_RCP_LOG
docker pull rhiot/activemq:${RHIOT_VERSION} | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
docker run -d --name AMQP_SERVICE_HOST \
  -e spring_activemq_broker_enabled=true -e spring_activemq_broker_amqpEnabled=true -e spring_activemq_broker_websocketEnabled=true \
  -p 5672:5672 -p 9090:9090 \
  -t rhiot/activemq:${RHIOT_VERSION} | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
echo "INFO : ActiveMQ started" | tee $RHIOT_RCP_LOG

### Data stream node

echo "INFO : Datastream" | tee $RHIOT_RCP_LOG
docker pull rhiot/datastream-node | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
docker run -d --name datastream-node \
  --link AMQP_SERVICE_HOST:AMQP_SERVICE_HOST -e AMQP_SERVICE_HOST=AMQP_SERVICE_HOST \
  --link mongodb:mongodb \
  -p 8080:8080 -p 5683:5683 -t rhiot/datastream-node | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
echo "INFO : Datastream started" | tee $RHIOT_RCP_LOG

### Spark standalone cluster

echo "INFO : Spark" | tee $RHIOT_RCP_LOG
docker pull rhiot/spark-standalone:${RHIOT_VERSION} | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
docker run -d --name spark_master -p 8081:8080 -P -t rhiot/spark-standalone:${RHIOT_VERSION} /start-master.sh "$@" | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
sleep 5
SPARK_MASTER_SERVICE_HOST=`docker inspect spark_master | grep IPAddress\": | cut -d '"' -f 4 | uniq`
echo "INFO : Spark master started" | tee $RHIOT_RCP_LOG

docker run -d --name spark_worker \
  --link spark_master:spark_master --link AMQP_SERVICE_HOST:AMQP_SERVICE_HOST -e SPARK_MASTER_SERVICE_HOST=${SPARK_MASTER_SERVICE_HOST} \
  -v /tmp/jobs:/tmp/jobs -P \
  -t rhiot/spark-standalone:${RHIOT_VERSION} /start-worker.sh | sed -e 's/^/ECHO : /' > $RHIOT_RCP_LOG 2>&1
echo "INFO : Spark worker started" | tee $RHIOT_RCP_LOG

